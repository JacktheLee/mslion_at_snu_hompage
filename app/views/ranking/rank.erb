<div class="container">
  <h1>랭킹</h1>
  <% for i in 0..Team.last.week %>
      <div class="row">
        <div class="card blue-grey darken-1">
          <div class="col s12">
            <span class="card-title"> <%= i %>주차 </span>
          </div>
          <div class="card-content white-text">
            <div class="row">
              <center>
              <% Team.where(week: i).order(:team_score).each_with_index do |team, index| %>
              <% if index == 0 %>
                <div class="col s12 m2 offset-m1">
              <% else %>
                <div class="col s12 m2">
              <% end %>
                  <div class="card center" id="teamrank">
                    <span class="card-title"> <%= index %>위</span>
                    <br>
                    <img src="<%=asset_path("trophy"+index.to_s+".png")%>" style="max-width:100%"/>
                    <br>
                    <p><%=team.team_number%>조</p>
                      <% team.users.each do |user| %>
                      <p> <%= user.name %> </p>
                      <% end %>
                  </div>
                </div>
              <% end %>
              </center>
            </div>
          </div>
      </div>
    </div>
  <% end %>   
</div>

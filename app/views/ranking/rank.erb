<div class="container">
  <h1>랭킹</h1>
  <% for i in Team.last.week.downto(0) %>
    <div class="row">
      <div class="card blue-grey darken-1">
        <div class="col s12">
          <span class="card-title"> <%= i %>주차 </span>
        </div>
        <div class="card-content white-text">
          <div class="row">
            <center>
              <% Team.where(week: i) do |team| %>
                <div class="card center" id="teamrank">
                  <span class="card-title"> <%= team.team_number %>위</span>
                  <br>
                  <% team.users.each do |user| %>
                    <p> <%= user.name %> </p>
                  <% end %>
                </div>
              <% end %>
            </center>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

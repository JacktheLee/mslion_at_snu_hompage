<div class="row">
  <div class="col s12">
    <h1 style="text-align: center;">과제 목록</h1>
    <ul class="tabs" style="background-color:black;">
      <%  @assignmenttitles.each do |title| %> 
        <% if title.name=="Code Academy" %>
          <li class="tab col s3"><a class="active" href="#assign1">Code Academy</a></li>
        <% else %>
          <li class="tab col s3"><a href="#assign<%= title.id%>"><%= title.name%></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <%  @assignmenttitles.each do |title| %> 
    <div id="assign<%= title.id%>" class="col s12">
      <% j=0;%>
      <% @userassigns.each do |assign| %>
        <% if assign.assignment.title==title.name %>
          <div class="container">
            <div class="col s6">
              <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><h3><%=assign.user.name%></h3></span>
                <p><%= assign.assignment.comment %></p>
                <img src="<%= asset_path(assign.assignment.img) %>">
              </div>
              <div class="card-action">
                <a style="font-size:50%"href="<%=assign.assignment.git_url%>"><%=assign.assignment.git_url%></a>
              </div>
            </div>
            </div>
          </div>
          <% j=j+1; %>
        <% end %>
      <% end %>
      <% if j==0 %>
        <h1>제출한 사람이 없음</h1>
      <% end %>
    </div>
  <% end %>
</div>
